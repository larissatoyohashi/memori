<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>


<div class="container-formulario">
    <h3> Registro de Rotas </h3>
    <hr>
    <div class="wrapper">
    <div class="cadastrar">
        <h4> Cadastrar nova Rota </h4>
        <hr>
        <form action="/rotas/update/<%= rota.id %>" method="POST">
            <div class="inserir-dados">
            <label> Titulo do Percurso:</label>
            <input type="text" name="tituloRota" value="<%= rota.tituloRota %>" class="form-input" required>
            <br>
            <label> Cidade localizada:</label>
            <select name="cidadeLocalizada" value="<%= rota.cidadeLocalizada %>">
                <option value="Registro">Registro</option>
              </select> 
              <br>
            <label> Longitude:</label>
            <input type="text" name="longitudeRota" value="<%= rota.longitudeRota %>" class="form-input" required>
            <label>Latitude:</label>
            <input type="text" name="latitudeRota" value="<%= rota.latitudeRota %>" class="form-input" required>
            
            <label> Descrição:</label>
            <input type="text" name="descricaoRota"  value="<%= rota.descricaoRota %>"  class="form-input" required> 
            <br><br>

            <label>Imagem de capa:</label>
            <div class="cadastro-arquivo" method="post" enctype="multipart/form-data">
                <form action="/upload-capa">
                    <input type="file" name="imagemCapa" value="<%= rota.imagemCapa %>" class="btn-arquivo">    
                </form>
            </div>

            <div class="div-botao">
                <input type="hidden" name="id" value="<%= rota.id %>">
            <input type="submit" class="button-cadastro" value="Alterar" onclick="return confirm (`Confirme as alterações realizadas para a rota <%= rota.tituloRota %>`)">
           
            </div>
            <br>
            </div>
        </form>
    </div>

 
<%- include ('partials/footer.ejs') %>