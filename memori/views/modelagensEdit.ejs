<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container-formulario">
    <h3> Edição de Modelagens </h3>
    <hr>

<div class="wrapper">
    <div class="cadastrar">
        <h4> Editar Modelagem </h4>
        <hr>
        <form action="/modelagens/update/<%= modelagens.id %>" method="POST">
            <div class="inserir-dados">
            <label> Nome da Modelagem:</label>
            <input type="text" name="nome-modelagem" value="<%= modelagens.nomeModelagem %>" class="form-input" required>
            <br>

            <label> Cidade: </label>
            <select name="cidade-modelagem" value="<%= modelagens.nomeCidade %>">
                <option value="Registro">Registro</option>
              </select> 
              <br>

            <label> Checkpoint: </label>
            <select name="checkpoint-modelagem" value="<%= modelagens.nomeCheckpoint %>">
                <option value="Galpão do KKKK">Galpão do KKKK</option>
              </select> 
              <br>

             
              <label>Arquivo da Modelagem: </label>
              <div class="cadastro-arquivo" method="post" enctype="multipart/form-data">
                  <form action="/upload-modelagem" >
                      <input type="file" name="upload-modelagem" value="<%= modelagens.arquivoModelagem %>" class="btn-arquivo"  required>    
                  </form>
              </div>

            <br><br>
            <div class="div-botao">
                <input type="hidden" name="id" value="<%= modelagens.id %>">
            <input type="submit" class="button-cadastro" value="Alterar" onclick="return confirm (`Confirme as alterações realizadas para a modelagem <%= modelagens.nomeModelagens %>`)">

             </div>
        </form>
    </div>
</div>

<%- include ('partials/footer.ejs') %>